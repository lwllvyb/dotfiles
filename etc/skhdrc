# open terminal
# cmd - return : /Applications/iTerm.app/Contents/MacOS/iTerm2 --single-instance -d ~

# focus window
shift + ctrl - h : yabai -m window --focus west
shift + ctrl - j : yabai -m window --focus south
shift + ctrl - k : yabai -m window --focus north
shift + ctrl - l : yabai -m window --focus east

# balance size of windows
shift + ctrl - b : yabai -m space --balance

# focus monitor
shift + ctrl - p  : yabai -m display --focus 1
shift + ctrl - n  : yabai -m display --focus 2

shift + ctrl - u : yabai -m space --focus 1
shift + ctrl - i : yabai -m space --focus 2
shift + ctrl - o : yabai -m space --focus 3

# send window to monitor and follow focus
shift + cmd - 1  : yabai -m window --display 1; yabai -m display --focus 1
shift + cmd - 2  : yabai -m window --display 2; yabai -m display --focus 2

# rotate tree
shift + ctrl - r : yabai -m space --rotate 90

# toggle window native fullscreen
shift + ctrl - f : yabai -m window --toggle native-fullscreen

# toggle window split type
shift + ctrl - e : yabai -m window --toggle split
